<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">การฝากขัง</h4>
            </div>
            <form>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="validationServer01">หมายเลขคดี</label>
                            <input type="text" class="form-control is-invalid" id="validationServer01" placeholder="หมวดอักษร" required>
                        </div>
                        <div class="col-md-5 mb-3">
                            <label for="validationServer02">&nbsp;</label>
                            <input type="text" class="form-control is-invalid" id="validationServer02" placeholder="เลขคดี" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationServer03">&nbsp;</label>
                            <input type="text" class="form-control is-invalid" id="validationServer03" placeholder="ปี พ.ศ." required>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="validationServer04">ชื่อผู้ร้อง</label>
                            <input type="text" class="form-control is-invalid" id="validationServer04" placeholder="ชื่อ-นามสกุล(ผู้ร้อง)" required>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="validationServer05">ชื่อผู้ต้องหา</label>
                            <input type="text" class="form-control is-invalid" id="validationServer05" placeholder="ชื่อ-นามสกุล(ผู้ต้องหา)" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationServer06">หมายเลขบัตรประชาชน</label>
                            <input type="text" class="form-control is-invalid" id="validationServer06" placeholder="หมายเลขบัตรประชาชน" required>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="validationServer04">วันที่จับกุม</label>
                            <input type="text" class="form-control is-invalid" id="validationServer04" placeholder="วันที่จับกุม" required>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-2 mb-3">
                            <label for="validationServer08">ครั้งที่ฝากขัง</label>
                            <input type="text" class="form-control is-invalid" id="validationServer08" placeholder="ครั้งที่ฝากขัง" required>
                        </div>

                        <div class="col-md-5 mb-3">
                            <label for="validationServer09">วันที่ฝากขัง</label>
                            <input type="text" class="form-control is-invalid" id="validationServer09" placeholder="วันที่ฝากขัง" required>
                        </div>

                        <div class="col-md-5 mb-3">
                            <label for="validationServer09">วันครบกำหนดฝากขัง</label>
                            <input type="text" class="form-control is-invalid" id="validationServer09" placeholder="วันครบกำหนดฝากขัง" required>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="validationServer04">การปล่อยตัวชั่วคราว : ครั้งที่</label>
                            <div class="form-group">
                                <select class="form-control" id="exampleFormControlSelect1">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="validationServer09">มากกว่า 7 ครั้ง (ระบุ)</label>
                            <input type="text" class="form-control is-invalid" id="validationServer09" placeholder="ครั้งที่ (ระบุ)" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="validationServer04">หลักประกัน</label>
                            <div class="form-group">
                                <select class="form-control" id="exampleFormControlSelect1">

                                    <% bailType.forEach(function(list) { %>
                                        <option><%= list.name %> </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="validationServer09">ราคาประกัน(บาท)</label>
                            <input type="text" class="form-control is-invalid" id="validationServer09" placeholder="ราคาประกัน(บาท)" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="exampleFormControlTextarea1">หมายเหตุ</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary set-left" type="submit">Submit form</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>

    </div>
</div>

<!-- End Modal -->